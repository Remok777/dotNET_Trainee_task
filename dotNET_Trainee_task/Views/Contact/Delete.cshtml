@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>Name</p>
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Contacts.Name
        </dd>
        <dt class="col-sm-2">
            Date of birth
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Contacts.DateOfBirth.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Maried
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Contacts.Maried
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Contacts.Phone
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Contacts.Salary
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>